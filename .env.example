# FEEDR Environment Configuration
# Copy this file to .env.local and fill in your values

# ==============================================
# SUPABASE (Required)
# ==============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ==============================================
# AI SERVICE SELECTION
# Choose which service to use for each stage
# ==============================================
SCRIPT_SERVICE=openai      # openai | claude | mock
VOICE_SERVICE=elevenlabs   # elevenlabs | openai | mock
VIDEO_SERVICE=sora         # sora | runway | mock
IMAGE_SERVICE=flux         # flux | dalle | mock
ASSEMBLY_SERVICE=shotstack # shotstack | ffmpeg | mock
RESEARCH_SERVICE=apify     # apify | mock

# ==============================================
# OPENAI (for scripts and/or TTS)
# ==============================================
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview

# ==============================================
# ANTHROPIC / CLAUDE (Powers OpenClaw brain)
# ==============================================
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-3-sonnet-20240229

# ==============================================
# OPENCLAW (Intelligent Orchestrator)
# Uses Anthropic API as the brain
# ==============================================
OPENCLAW_MODEL=claude-sonnet-4-20250514
OPENCLAW_AUTO_RESEARCH=true

# ==============================================
# ELEVENLABS (for TTS)
# ==============================================
ELEVENLABS_API_KEY=...
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ==============================================
# KIE.AI / SORA 2 PRO (for video generation)
# Get your key at https://kie.ai/sora-2-pro
# ==============================================
KIE_API_KEY=...

# ==============================================
# RUNWAY ML (alternative video generation)
# ==============================================
RUNWAY_API_KEY=...

# ==============================================
# SHOTSTACK (for video assembly)
# Get your key at https://shotstack.io
# ==============================================
SHOTSTACK_API_KEY=...

# ==============================================
# FFMPEG (alternative video assembly)
# ==============================================
FFMPEG_ENDPOINT=
FFMPEG_API_KEY=

# ==============================================
# APIFY (for TikTok research/scraping)
# ==============================================
APIFY_API_TOKEN=apify_api_...

# ==============================================
# REPLICATE (for Flux image generation)
# ==============================================
REPLICATE_API_KEY=...
FLUX_MODEL_VERSION=black-forest-labs/flux-1.1-pro

# ==============================================
# OPTIONAL
# ==============================================
# Enable debug mode
DEBUG=false
